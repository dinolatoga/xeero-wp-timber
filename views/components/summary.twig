<article class="summary summary-{{post.post_type}}" id="summary-{{post.ID}}">
	{% block content %}
		<h2 class="article-title"><a href="{{post.link}}">{{post.title}}</a></h2>
		<p class="article-summary">{{post.get_preview}}</p>
		{% if post.get_thumbnail %}
			<img src="{{post.thumbnail.src}}" />
		{% endif %}
	{% endblock %}
</article>
